@model Domain.entities.user

@{
    Layout = "~/Views/Shared/Header.cshtml";
}
<main>
    <div class="bg_color_2">
        <div class="container margin_60_35">
            <div id="login">
                <h1>Please login to DOCTWIN!</h1>
                <div class="box_form">

                        <span>@TempData["errormsg"]</span>

                        

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your Username" } })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Your password" } })
                        </div>
                        <a href="#0"><small>Forgot password?</small></a>
                        <div class="form-group text-center add_top_20">
                            <input class="btn_1 medium" type="submit" value="Login">
                        </div>
                    }
                </div>
                <p class="text-center link_bright">Do not have an account yet? <a href="#0"><strong>Register now!</strong></a></p>
            </div>
            <!-- /login -->
        </div>
    </div>
</main>
<!-- /main -->
