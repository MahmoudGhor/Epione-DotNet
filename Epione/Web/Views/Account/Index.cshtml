@model Domain.entities.user

@{
    Layout = "~/Views/Shared/Header.cshtml";
}

<main>
    <div class="bg_color_2">
        <div class="container margin_60_35">
            <div id="login-2">
                <h1>Please login to Findoctor!</h1>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <form>
                        <div class="box_form clearfix">
                            <div class="box_login">
                                <a href="#0" class="social_bt facebook">Login with Facebook</a>
                                <a href="#0" class="social_bt google">Login with Google</a>
                                <a href="#0" class="social_bt linkedin">Login with Linkedin</a>
                            </div>
                            <div class="box_login last">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })


                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })


                                    <a href="#0" class="forgot"><small>Forgot password?</small></a>
                                </div>
                                <div class="form-group">
                                    <input class="btn_1" type="submit" value="Login">
                                </div>
                                @if(Session["username"] != null )
                                {
                                    <text> welcome @Session["username"].ToString() </text><br />
                                    <text> your token : @Session["token"].ToString() </text>
                                    <text> your type @Session["type"].ToString() </text>
}
                            </div>
                        </div>
                    </form>
                }
                <p class="text-center link_bright">Do not have an account yet? <a href="#0"><strong>Register now!</strong></a></p>
            </div>
            <!-- /login -->
        </div>
    </div>
</main>
