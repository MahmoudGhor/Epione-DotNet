@model Web.Models.PatternModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddOrEdit</title>
</head>
<body>
    @using (Html.BeginForm("AddOrEdit","Pattern",FormMethod.Post , new { onsubmit = "return SubmitForm(this)" }))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.label, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.label, new { htmlAttributes = new { @class = "form-control" } })       
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.price, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })   
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.periode, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.periode, new { htmlAttributes = new { @class = "form-control" } }) 
            </div>
    
            <div class="form-group">
                  <input type="submit" value="Save" class="btn btn-primary" />
                <input type="reset" value="reset" class="btn btn-warning" />
                
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
