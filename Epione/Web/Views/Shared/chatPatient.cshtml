                <img src="https://image.flaticon.com/icons/svg/237/237188.svg" alt="" />
            </div>
        </div>
        <div class="chat-box-container">
            <div class="chat-box-nav">
                Answer questions
            </div>
            <div class="connectbtn1">
              
            </div>
            <div class="chat-box-content">
                <div class="messages" id="messagesDoc">
                </div>

            </div>
            <div class="message-box">
                <textarea type="text" id="messageToPatient" class="message-input" placeholder="Send message..."></textarea>
